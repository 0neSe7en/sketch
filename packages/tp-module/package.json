{
  "name": "@36node/module",
  "version": "0.0.0",
  "description": "Scaffolding out a node module.",
  "repository": "36node/sketch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/36node/sketch/issues"
  },
  "main": "dist/module.cjs.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && babel ./src -d ./dist --ignore test.js",
    "format": "prettier --trailing-comma es5 --single-quote --write",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@36node/babel": "*",
    "@36node/eslint-config": "*",
    "@commitlint/cli": "6.1.0",
    "@commitlint/config-conventional": "6.1.0",
    "jest-cli": "23.3.0",
    "prettier": "1.13.7"
  }
}
