{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "changelog": "lerna-changelog",
    "format": "prettier --trailing-comma es5 --write",
    "lint": "eslint packages/*/src",
    "publish:all": "lerna publish from-git --registry https://registry.npmjs.org",
    "release": "lerna version --conventional-commits --push -m 'chore(release): publish'",
    "test": "jest packages/*/src --silent"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "packages/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.1.1",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "lerna": "^3.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  }
}
