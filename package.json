{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bump": "lerna publish --skip-npm --conventional-commits --yes && git push --follow-tags origin master",
    "changelog": "lerna-changelog",
    "format": "prettier --trailing-comma es5 --write",
    "lint": "eslint packages/*/src",
    "release": "lerna publish from-git --registry https://registry.npmjs.org",
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest packages/*/src --silent"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "packages/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/babel": "*",
    "@36node/eslint-config": "*",
    "@commitlint/cli": "6.1.0",
    "@commitlint/config-conventional": "6.1.0",
    "husky": "1.0.0-rc.13",
    "jest": "23.4.1",
    "lerna": "3.4.0",
    "lint-staged": "7.2.0",
    "prettier": "1.13.7"
  }
}
